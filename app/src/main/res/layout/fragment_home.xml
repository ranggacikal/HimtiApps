<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <include layout="@layout/slider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center">

            <RelativeLayout
                android:id="@+id/rl_info_sharing"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/background_icon_home">

                <ImageView
                    android:id="@+id/img_info_sharing"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/information"
                    android:layout_centerInParent="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_info_sharing"
                    android:text="Info Sharing"
                    android:layout_marginTop="5dp"
                    android:layout_centerInParent="true"
                    android:textSize="10sp"
                    android:textColor="#FFA500"
                    android:textStyle="bold"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_agenda"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/background_icon_home">

                <ImageView
                    android:id="@+id/img_agenda"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_schedule"
                    android:layout_centerInParent="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Agenda HIMTI"
                    android:layout_marginTop="5dp"
                    android:layout_centerInParent="true"
                    android:layout_below="@+id/img_agenda"
                    android:textSize="10sp"
                    android:textColor="#FFA500"
                    android:textStyle="bold"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_keanggotaan"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/background_icon_home">

                <ImageView
                    android:id="@+id/img_keanggotaan"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_anggota"
                    android:layout_centerInParent="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Keanggotaan"
                    android:layout_marginTop="5dp"
                    android:layout_centerInParent="true"
                    android:layout_below="@+id/img_keanggotaan"
                    android:textSize="10sp"
                    android:textColor="#FFA500"
                    android:textStyle="bold"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center">

            <RelativeLayout
                android:id="@+id/rl_berita"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/background_icon_home">

                <ImageView
                    android:id="@+id/img_berita"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_berita"
                    android:layout_centerInParent="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Berita Teknologi"
                    android:layout_centerInParent="true"
                    android:layout_below="@+id/img_berita"
                    android:textSize="10sp"
                    android:layout_marginTop="5dp"
                    android:textColor="#FFA500"
                    android:textStyle="bold"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_info_kampus"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/background_icon_home">

                <ImageView
                    android:id="@+id/img_info_kampus"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_info"
                    android:layout_centerInParent="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Info Kampus"
                    android:layout_marginTop="5dp"
                    android:layout_centerInParent="true"
                    android:layout_below="@+id/img_info_kampus"
                    android:textSize="10sp"
                    android:textColor="#FFA500"
                    android:textStyle="bold"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_modul"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/background_icon_home">

                <ImageView
                    android:id="@+id/img_modul"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_modul"
                    android:layout_centerInParent="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Modul"
                    android:layout_marginTop="5dp"
                    android:layout_centerInParent="true"
                    android:layout_below="@+id/img_modul"
                    android:textSize="10sp"
                    android:textColor="#FFA500"
                    android:textStyle="bold"/>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>